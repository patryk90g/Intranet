                </div>
                <div>
                    <img u="image" src2="~/Content/img/slider2.png" />
                </div>
                <div>
                    <img u="image" src2="~/Content/img/slider3.png" />
                </div>
                <div>
                    <img u="image" src2="~/Content/img/Beztytulu.png" />
                </div>
            </div>



            <div u="navigator" class="jssorb05" style="bottom: 16px; right: 6px;">
                <div u="prototype"></div>
            </div>

            <span u="arrowleft" class="jssora11l" style="top: 123px; left: 20px;">
            </span>
            <span u="arrowright" class="jssora11r" style="top: 123px; right: 8px;">
            </span>
